<script type="text/javascript">
      $(document).ready(function(){
        $("#video_game", "#disneyworld").addClass(".hide");
        $('#madlib_form').on('change', function() {
          if (this.value == 'video_game') 
          {
            console.log('hi im video game')
            $("#video_game").addClass("show").removeClass("hide");
            $("#disneyworld").addClass("hide");
          }
          else if (this.value == 'disneyworld')
          {
            console.log('hi im disneyworld')

            $("#disneyworld").addClass("show").removeClass("hide");
            $("#video_game").addClass("hide");
          
          }
        });
      });
</script>

